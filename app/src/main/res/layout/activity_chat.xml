<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dannyyyy.mineclass.ChatActivity"
    android:background="@drawable/gradient"
    android:layout_alignLeft="@+id/bottom_align">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_bubbles">

        <com.dannyyyy.mineclass.ChatView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hallo im doin a message"
            android:background="@drawable/chat_bubble"
            android:layout_gravity="bottom|left" />

        <com.dannyyyy.mineclass.ChatView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hallo im sending a message"
            android:background="@drawable/chat_bubble"
            android:layout_gravity="bottom|left" />

    </LinearLayout>

</ScrollView>
